<div class="container">
<br>
<h2>Order</h2>
<br>
<%= link_to "New ", new_order_path %>
<table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Nama</th>
      <th scope="col">Order Date</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
  <% no = 0 %>
  <% @orders.each do |order| %>
    <tr>
      <th scope="row"><%= no += 1 %></th>
      <td><%= order.name %></td>
      <td><%= order.order_date %></td>
      <td>Rp.<%= order.total %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>